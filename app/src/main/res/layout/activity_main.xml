<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Score:"
            android:id="@+id/ScoreText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="50dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:textSize="20sp">
        </TextView>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0"
            android:id="@+id/ScoreNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ScoreText"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/LevelNumber"
            android:text="1"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Level:"
            android:id="@+id/LevelText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/LevelNumber"
            android:paddingStart="50dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:textSize="20sp">
        </TextView>


        <GridLayout
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:background="@drawable/grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ScoreText"
            android:columnCount="4"
            android:rowCount="4">

                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:src="@drawable/a"
                    android:alpha="0"
                    android:id="@+id/C00"
                    android:onClick="selectCard">
                </ImageView>

                <ImageView
                    android:id="@+id/C01"
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:alpha="0"
                    android:src="@drawable/a"
                    android:onClick="selectCard"/>

                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:src="@drawable/a"
                    android:id="@+id/C02"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:src="@drawable/a"
                    android:id="@+id/C03"
                    android:alpha="0"
                    android:onClick="selectCard"/>

                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:src="@drawable/a"
                    android:id="@+id/C10"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:src="@drawable/a"
                    android:id="@+id/C11"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:src="@drawable/a"
                    android:id="@+id/C12"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:src="@drawable/a"
                    android:id="@+id/C13"
                    android:alpha="0"
                    android:onClick="selectCard"/>

                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:src="@drawable/a"
                    android:id="@+id/C20"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:src="@drawable/a"
                    android:id="@+id/C21"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:src="@drawable/a"
                    android:id="@+id/C22"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:src="@drawable/a"
                    android:id="@+id/C23"
                    android:alpha="0"
                    android:onClick="selectCard"/>

                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:src="@drawable/a"
                    android:id="@+id/C30"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:src="@drawable/a"
                    android:id="@+id/C31"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:src="@drawable/a"
                    android:id="@+id/C32"
                    android:alpha="0"
                    android:onClick="selectCard"/>
                <ImageView
                    android:layout_width="102.5dp"
                    android:layout_height="102.5dp"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:src="@drawable/a"
                    android:id="@+id/C33"
                    android:alpha="0"
                    android:onClick="selectCard"/>


        </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>